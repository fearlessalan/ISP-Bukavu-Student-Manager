{
  "name": "isp-bukavu-student-manager",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "npm run build:dev && concurrently \"npm:watch:*\" \"npm:serve\"",
    "build": "tsc && tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify && cp index.html dist/index.html && cp src/students.json dist/src/",
    "build:dev": "tsc && tailwindcss -i ./src/styles.css -o ./dist/styles.css && cp index.html dist/index.html && cp src/students.json dist/src/",
    "watch:ts": "tsc --watch",
    "watch:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "serve": "serve dist"
  },
  "devDependencies": {
    "@angular/common": "^20.3.2",
    "@angular/compiler": "^20.3.2",
    "@angular/core": "^20.3.2",
    "@angular/forms": "^20.3.2",
    "@angular/platform-browser": "^20.3.2",
    "@angular/router": "^20.3.2",
    "@types/d3": "^7.4.3",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.39",
    "rxjs": "^7.8.1",
    "serve": "^14.2.3",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3"
  }
}